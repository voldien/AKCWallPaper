<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"

	tools:context=".fragment.SingleViewFragment">

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/floating_action_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true"
		android:src="@drawable/ic_arrow_back_48px" />

	<ScrollView
		android:id="@+id/scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<androidx.fragment.app.FragmentContainerView
				android:id="@+id/single_view_fragment_imageswipe_container"
				android:name="org.linuxsenpai.konachan.fragment.DummyFragment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:transitionName="profile"
				android:tag="swipe" />

			<TextView
				android:id="@+id/textview_child_link"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/parent_post"
				android:textAlignment="center"
				android:textColor="@color/tag_color_any"
				android:visibility="gone" />

			<androidx.fragment.app.FragmentContainerView
				android:id="@+id/single_view_fragment_information_container"
				android:name="org.linuxsenpai.konachan.fragment.DummyFragment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:tag="tag"
				android:visibility="visible" />

		</LinearLayout>
	</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
